<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.hdm.vergissmeinnicht"
    >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:name=".android.CustomApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        >

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"
            />

        <activity
            android:name=".activities.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:configChanges="locale"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.SeniorMainActivity"
            android:screenOrientation="landscape"
            android:configChanges="locale"
            />
        <activity
            android:name=".activities.SeniorPlantsActivity"
            android:screenOrientation="landscape"
            android:configChanges="locale"
            />
        <activity
            android:name=".activities.SeniorMedicineActivity"
            android:screenOrientation="landscape"
            android:configChanges="locale"
            />
        <activity
            android:name=".activities.SeniorAppointmentsActivity"
            android:screenOrientation="landscape"
            android:configChanges="locale"
            />
        <activity
            android:name=".activities.DefaultMainActivity"
            android:screenOrientation="landscape"
            android:configChanges="locale"
            />
    </application>

</manifest>
