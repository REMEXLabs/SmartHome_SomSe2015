<resources>

    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar.Fullscreen">
        <!--item name="android:textAppearance">@style/SeniorTextStyle</item-->
        <item name="android:editTextColor">@color/default_text_color</item> <!-- color for date/time picker -->
    </style>

    <!-- txt: default textviews in app -->
    <style name="DefaultTextStyle" parent="android:TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <!-- senior TextViews in app -->
    <style name="SeniorTextStyle" parent="android:TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_senior</item>
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <!-- txt: fragment heading -->
    <style name="FragmentHeadingStyle" parent="DefaultTextStyle">
        <item name="android:layout_height">@dimen/fragment_heading_height</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_fragment_heading</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <!-- txt: navigation category name -->
    <style name="FragmentCategoryStyle" parent="DefaultTextStyle">
        <item name="android:layout_height">@dimen/fragment_heading_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textColor">@color/default_white</item>
        <item name="android:gravity">center</item>
    </style>

</resources>